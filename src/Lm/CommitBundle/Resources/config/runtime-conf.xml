<?xml version="1.0" encoding="UTF-8" ?>
<config>
  <propel>
    <datasources default="lmdb">

      <!-- match "id" below with the database "name" in schema.xml -->
      <datasource id="lmdb">
        <adapter>mysql</adapter>
        <connection>
          <dsn>mysql:host=localhost;dbname=lmdb</dsn>
          <user>root</user>
          <password></password>
        </connection>
      </datasource>
    </datasources>
    <log>
      <logger name="defaultLogger">
        <type>stream</type>
        <path>/var/log/propel.log</path>
        <level>300</level>
      </logger>
    </log>	
  </propel>
</config>